generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model users {
  id         Int       @id @default(autoincrement())
  nama       String    @db.VarChar(255)
  username   String    @unique(map: "username") @db.VarChar(255)
  email      String    @unique(map: "email") @db.VarChar(255)
  role       String?   @default("user") @db.VarChar(100)
  kontak     String    @unique(map: "kontak") @db.VarChar(50)
  password   String    @db.VarChar(255)
  created_at DateTime? @default(now()) @db.DateTime(0)
  updated_at DateTime? @db.DateTime(0)
  ulasan     ulasan?
}

model ulasan {
  id         Int       @id @default(autoincrement())
  bintang    Int
  komentar   String    @db.Text
  user_id    Int       @unique(map: "user_id")
  created_at DateTime? @default(now()) @db.DateTime(0)
  updated_at DateTime? @default(now()) @db.DateTime(0)
  users      users     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "ulasan_ibfk_1")
}
